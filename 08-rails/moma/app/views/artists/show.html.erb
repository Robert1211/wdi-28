<h1><%= @artist.name %></h1>

<%= image_tag @artist.image, :alt => @artist.name, :class => 'feature' if @artist.image.present? %>

<ul>
  <li>Nationality: <%= @artist.nationality %></li>
  <% if @artist.dob.present? %>
    <li>Date of birth: <%= @artist.dob.strftime '%A, %B %e, %Y' %></li>
  <% end %>
  <li>Period: <%= @artist.period %></li>
</ul>

<div class="controls">
  <%= link_to "Edit artist", edit_artist_path(@artist) %>
  <%= link_to "Delete artist", artist_path(@artist), :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
