<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <p>
        <%= flash[:error] %>
      </p>
    <% end %>

    <label>Amount: $5.00</label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="A signed photo of me" data-amount="500" data-locale="auto"></script>
<% end %>
